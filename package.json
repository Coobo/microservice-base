{
  "name": "@coobo/base",
  "version": "2.0.0-alpha.6",
  "description": "Microservice Base Application",
  "main": "dist/index.js",
  "author": "VIMGAS <victormoraesgs@gmail.com>",
  "repository": "https://github.com/Coobo/microservice-base",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "nodemon src/index.js",
    "build": "sucrase ./src -d ./dist --transforms imports && cp index.d.ts dist/",
    "test": "jest --runInBand --bail",
    "test:watch": "jest --runInBand --watch",
    "test:coverage": "jest --runInBand --coverage",
    "test:related": "jest --runInBand --findRelatedTests",
    "prerelease": "yarn run build",
    "release": "standard-version --infile \"docs/CHANGELOG.md\""
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@sucrase/jest-plugin": "^2.0.0",
    "commitlint": "^8.2.0",
    "doctoc": "^1.4.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "mongodb-memory-server-global": "^5.2.8",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "sucrase": "^3.10.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "bull": "^3.12.0",
    "bull-board": "^0.5.0",
    "chance": "^1.1.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.1.6-alpha.5",
    "express-pino-logger": "^4.0.0",
    "helmet": "^3.21.1",
    "lodash.get": "^4.4.2",
    "lodash.mergewith": "^4.6.2",
    "lodash.set": "^4.3.2",
    "mongoose": "5.7.11",
    "pino": "^5.13.5",
    "pino-pretty": "^3.2.2",
    "uuid": "^3.3.3",
    "youch": "^2.0.10"
  },
  "types": "index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "yarn test:related",
      "git add"
    ],
    "tests/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "yarn test:related",
      "git add"
    ],
    "README.md": [
      "doctoc README.md --title Conte√∫do",
      "git add"
    ]
  }
}
